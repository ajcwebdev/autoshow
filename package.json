{
  "name": "autoshow",
  "author": "Anthony Campolo",
  "description": "An example workflow for automatically generating customizable show notes for audio and video files.",
  "keywords": [
    "ChatGPT",
    "Claude",
    "Gemini",
    "Deepgram",
    "AssemblyAI"
  ],
  "type": "module",
  "scripts": {
    "repo": "bash .github/workflows/repomix.sh",
    "setup": "bash .github/workflows/setup.sh",
    "check": "npx tsc && cd web && npx tsc && cd ..",
    "node:base": "node --no-warnings --experimental-transform-types --es-module-specifier-resolution=node",
    "serve": "npm run node:base -- --watch src/fastify.ts",
    "web": "npm run up && cd web && npm i && npm run dev",
    "start": "npx prisma migrate deploy --schema=/usr/src/app/prisma/schema.prisma && npm run node:base -- src/fastify.ts",
    "up": "./.github/workflows/docker-up.sh",
    "docker-info": "./.github/workflows/docker-info.sh",
    "docker-inspect": "./.github/workflows/docker-inspect.sh",
    "docker-logs": "./.github/workflows/docker-logs.sh",
    "docker-down": "./.github/workflows/docker-down.sh",
    "prune": "./.github/workflows/prune.sh",
    "get-db": "./.github/workflows/get-db.sh",
    "wipe-db": "./.github/workflows/wipe-db.sh",
    "railway-info": "./.github/workflows/railway-info.sh",
    "test:base": "tsx --test --env-file=.env --test-reporter=spec --test-reporter-destination=spec.log --test-concurrency=1",
    "test:models": "npm run test:base -- test/models.test.ts",
    "test:prompts": "npm run test:base -- test/prompts.test.ts",
    "test:steps": "npm run test:base -- test/steps.test.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.40.1",
    "@aws-sdk/client-s3": "3.799.0",
    "@aws-sdk/s3-request-presigner": "3.799.0",
    "@deepgram/sdk": "3.12.1",
    "@fastify/cors": "11.0.1",
    "@google/generative-ai": "0.24.1",
    "@prisma/client": "6.7.0",
    "assemblyai": "4.12.2",
    "chalk": "5.4.1",
    "fastify": "5.3.2",
    "file-type": "20.5.0",
    "openai": "4.96.2",
    "prisma": "6.7.0"
  },
  "devDependencies": {
    "@types/node": "22.15.3",
    "repomix": "0.3.3",
    "tsx": "4.19.4",
    "typescript": "5.8.3"
  }
}
